<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="true" android:drawable="@color/purple_700"/>
    <item android:state_focused="true" android:drawable="@color/purple_700"/>
    <item android:drawable="@color/blue1"/>
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:start="-1dp"
        android:end="-1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/white2"/>
        </shape>
    </item>

</layer-list>